---
import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';

const skills = {
	expertise: [
		"BIM Modeling",
		"Construction Documentation",
		"3D Visualization & Rendering",
		"As-Built Documentation",
		"Construction Drawings",
		"Building Code Analysis",
		"Construction Detailing",
		"Space Planning",
		"Site Documentation",
		"Point Cloud Processing"
	],
	software: [
		"Revit",
		"AutoCAD",
		"SketchUp",
		"Lumion",
		"Enscape",
		"V-Ray",
		"SAP",
		"Adobe Photoshop"
	],
}
---

<BaseLayout title="About | Sushma Shrestha" description="About Sushma Shrestha">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About Me"
			>
				<!-- <img
					width="230"
					height="436"
					src="/profile.jpg"
					alt="Sushma Shrestha"
					class="rounded-lg shadow-md center-image"
				/> -->
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						I am a passionate and detail-oriented Architectural Technologist with a deep appreciation for innovative design and precision. My expertise spans advanced CAD drafting, 3D modeling, and photorealistic rendering. I specialize in tools like <strong>AutoCAD</strong>, <strong>Revit</strong>, <strong>SketchUp</strong>, <strong>Lumion</strong>, and <strong>V-Ray</strong>.
					</p>
					<p>
						With experience in Canada and Nepal, I bring a global perspective to projects. My work ranges from precise technical drawings to immersive 3D visualizations. I stay updated with building codes, zoning laws, and fire regulations to exceed industry standards.
					</p>
					<p>
						I thrive in dynamic environments and am committed to delivering designs that are aesthetically pleasing, functional, and sustainable.
					</p>
				</div>
			</section>

			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<ul class="list-disc pl-5">
						<li><strong>Postgraduate Certificate in Operations Management</strong>, Fanshawe College, Canada (2023), Dean’s Honour Roll</li>
						<li><strong>Postgraduate Certificate in Construction Project Management</strong>, Fanshawe College, Canada (2022), Dean’s Honour Roll</li>
						<li><strong>Bachelor’s in Architecture</strong>, Tribhuvan University, Nepal (2019)</li>
					</ul>
				</div>
			</section>

			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content flex flex-wrap gap-2">
					{skills.expertise.map((skill) => (
						<span
							class="px-3 py-1 bg-gray-200 rounded-full text-sm text-gray-700 shadow-sm"
							key={skill}
						>
							{skill}
						</span>
					))}
				</div>
			</section>

			<section>
				<h2 class="section-title">Software Proficiency</h2>
				<div class="content flex flex-wrap gap-2">
					{skills.software.map((skill) => (
						<span
							class="px-3 py-1 bg-blue-100 rounded-full text-sm text-blue-800 shadow-sm"
							key={skill}
						>
							{skill}
						</span>
					))}
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 4rem;
		padding: 2rem 1rem;
		font-family: 'Inter', sans-serif;
		line-height: 1.6;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		color: #333;
	}

	.section-title {
		font-size: 1.75rem;
		font-weight: bold;
		color: #0056b3;
	}

	.content {
		font-size: 1rem;
		color: #555;
	}

	ul {
		list-style-type: disc;
		margin-left: 1.5rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	.flex {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	span {
		font-size: 0.875rem;
		padding: 0.5rem 0.75rem;
		border-radius: 0.375rem;
	}

	.bg-gray-200 {
		background-color: #f3f4f6;
		color: #374151;
	}

	.bg-blue-100 {
		background-color: #e0f2fe;
		color: #1e3a8a;
	}
	
	.center-image {
		display: block;
		margin: 0 auto;
		max-width: 100%;
		height: auto;
	}
</style>