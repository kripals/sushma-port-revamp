---
import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';

const skills = {
	expertise: [
		"BIM Modeling",
		"Construction Documentation",
		"3D Visualization & Rendering",
		"As-Built Documentation",
		"Construction Drawings",
		"Building Code Analysis",
		"Construction Detailing",
		"Space Planning",
		"Site Documentation",
		"Point Cloud Processing"
	],
	software: [
		"Revit",
		"AutoCAD",
		"SketchUp",
		"Lumion",
		"Enscape",
		"V-Ray",
		"SAP",
		"Adobe Photoshop"
	],
}
---

<BaseLayout title="About | Sushma Shrestha" description="About Sushma Shrestha">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="Thanks for stopping by. Read below to learn more about myself and my background."
			>
				<img
					width="1553"
					height="873"
					src="/profile.jpg"
					alt="Sushma Shrestha"
				/>
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						I am a passionate and detail-oriented Architectural Technologist with a deep appreciation for innovative design and precision. My expertise spans a wide range of skills, including advanced CAD drafting, 3D modeling, and photorealistic rendering. I specialize in creating visually compelling and technically sound designs using tools like AutoCAD, Revit, SketchUp, Lumion, and V-Ray.
					</p>
					<p>
						With experience working in Canada and Nepal, I bring a diverse perspective to architectural and construction projects. My portfolio includes everything from precise technical drawings to immersive 3D visualizations that help clients bring their vision to life. I pride myself on staying updated with building codes, zoning laws, and fire regulations to ensure that my work not only meets but exceeds industry standards.
					</p>
					<p>
						Beyond my technical abilities, I am a collaborative team player who thrives in dynamic and challenging environments. I am committed to delivering designs that are not only aesthetically pleasing but also functional and sustainable.
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>Postgraduate Certificate in Operations Management, Fanshawe College, Canada (2023), Dean’s Honour Rol</p>
					<p>Postgraduate Certificate in Construction Project Management, Fanshawe College, Canada (2022), [Dean’s Honour Roll]</p>
					<p>Bachelor’s in Architecture, Tribhuvan University, Nepal (2019)</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					{skills.expertise.map(skill => (
						<span class="px-3 py-1 bg-gray-200 rounded-full text-sm text-gray-700">
						  {skill}
						</span>
					  ))}
				</div>
			</section>
			<section>
				<h2 class="section-title">Software Proficiency</h2>
				<div class="content">
					{skills.software.map(skill => (
                    <span class="px-3 py-1 bg-blue-100 rounded-full text-sm text-blue-800">
						  {skill}
						</span>
					  ))}
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
